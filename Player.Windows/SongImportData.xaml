<Window x:Class="Riffle.Player.Windows.SongImportData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Riffle.Player.Windows"
        mc:Ignorable="d"
        Title="Enter Song Metadata" Height="250" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="File Path:"/>
        <TextBox x:Name="TxtFilePath" Margin="0,5" IsEnabled="False" Text="FilePath"/>
        
        <TextBlock Text="Song Title:"/>
        <TextBox x:Name="TxtSongTitle" Margin="0,5"/>

        <TextBlock Text="Artist Name:"/>
        <TextBox x:Name="TxtArtistName" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Margin="5" Click="OnOkClick"/>
            <Button Content="Cancel" Width="60" Margin="5" Click="OnCancelClick"/>
        </StackPanel>
    </StackPanel>
</Window>
