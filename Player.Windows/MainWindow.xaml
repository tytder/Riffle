<Window x:Class="Riffle.Player.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
        Title="MixTape Test" Height="250" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Play" Width="100" Margin="5" Click="OnPlay"/>
            <Button 
                x:Name="BtnPauseResume" Width="100" Margin="5"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Click="OnPauseResume">
                Pause
            </Button>
            <Button Content="Stop" Width="100" Margin="5" Click="OnStop"/>
            <Slider x:Name="SeekBar" 
                    Minimum="0" 
                    Maximum="100" 
                    IsMoveToPointEnabled="True"
                    PreviewMouseLeftButtonUp="SeekBar_OnPreviewMouseLeftButtonUp"
                    Width="300" 
                    HorizontalAlignment="Center">
                <Slider.Resources>
                    <Style TargetType="primitives:Thumb">
                        <EventSetter Event="DragStarted" Handler="SeekBar_OnDragStarted"/>
                        <EventSetter Event="DragCompleted" Handler="SeekBar_OnDragCompleted"/>
                    </Style>
                </Slider.Resources>
            </Slider>
        </StackPanel>
    </Grid>
</Window>
