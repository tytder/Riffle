<Window x:Class="Riffle.Player.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:windows="clr-namespace:Riffle.Player.Windows"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        WindowStyle="None"
        Title="Riffle Music Player" Height="600" Width="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        MinWidth="600" MinHeight="500">

    <Window.Resources>
        <windows:ReferenceEqualityConverter x:Key="ReferenceEqualityConverter"/>
    </Window.Resources>
    
    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            CornerRadius="20"
            GlassFrameThickness="0"
            ResizeBorderThickness="5"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Grid
        ClipToBounds="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/> 
            <RowDefinition Height="*"/>    
            <RowDefinition Height="auto"/> 
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" Background="#222" MouseLeftButtonDown="Border_MouseLeftButtonDown" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /> 
                <ColumnDefinition Width="Auto" /> 
            </Grid.ColumnDefinitions>
            
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal"
                >
            <TextBlock 
                Text="RifflePlayer"
                Foreground="White"
                FontSize="16"
                Margin="25,5,30,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>
            <Button 
                x:Name="BtnImportSong"
                Click="BtnImportSong_OnClick"
                Content="Import new song"
                Margin="10"
                Padding="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Window Controls -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Column="1">
                <!-- Minimize -->
                <Button Width="40" Content="—"
                        Click="Minimize_Click"/>

                <!-- Maximize / Restore -->
                <Button Width="40" Content="⬜"
                        Click="Maximize_Click"/>

                <!-- Close -->
                <Button Width="40" Content="✕"
                        Click="Close_Click"
                        Foreground="Red"/>
            </StackPanel>
        </Grid>

        <!-- Main layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /> 
                <ColumnDefinition Width="3*" />    
                <ColumnDefinition Width="auto" /> 
            </Grid.ColumnDefinitions>

            <!-- Playlists -->
            <ListView x:Name="PlaylistList"
                      Grid.Column="0"
                      ItemsSource="{Binding SidebarViewModel.Playlists}"
                      SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}"
                      MouseDoubleClick="PlaylistList_OnMouseDoubleClick"
                      SizeChanged="PlaylistList_OnSizeChanged">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource ReferenceEqualityConverter}">
                                        <Binding Path="." /> <!-- The playlist in this row -->
                                        <Binding Path="ViewModel.CurrentPlaylistPlaying"
                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter Property="Foreground" Value="Green"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView x:Name="PlaylistView">
                        <GridViewColumn Width="200" DisplayMemberBinding="{Binding Name}">
                            <GridViewColumn.Header>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Playlists" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <Button Content="+" Width="20" Height="20" Margin="0,0,2,0"
                                            Click="AddPlaylist_Click"/>
                                    <Button Content="−" Width="20" Height="20"
                                            Click="RemovePlaylist_Click"/>
                                </StackPanel>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Songs -->
            <ListView x:Name="PlaylistContent"
                      Grid.Column="1"
                      ItemsSource="{Binding SongsViewModel.Songs}"
                      MouseDoubleClick="PlaylistContent_OnMouseDoubleClick"
                      SizeChanged="PlaylistContent_OnSizeChanged">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource ReferenceEqualityConverter}">
                                        <Binding Path="." /> <!-- Song in this row -->
                                        <Binding Path="ViewModel.CurrentSongPlaying" RelativeSource="{RelativeSource AncestorType=Window}" />
                                        <Binding Path="ViewModel.SelectedPlaylist" RelativeSource="{RelativeSource AncestorType=Window}" />
                                        <Binding Path="ViewModel.CurrentPlaylistPlaying" RelativeSource="{RelativeSource AncestorType=Window}" />
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter Property="Foreground" Value="Green"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView x:Name="GridView">
                        <GridViewColumn Header="Title"  DisplayMemberBinding="{Binding Title}" Width="200"/>
                        <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Artist}" Width="100"/>
                        <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding DurationDisplay}" Width="100"/>
                        <GridViewColumn Header="FilePath" DisplayMemberBinding="{Binding FilePath}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Border Background="White"
                BorderBrush="Gray" BorderThickness="1"
                x:Name="QueueOverlay" 
                HorizontalAlignment="Right"
                Width="auto"
                Visibility="Hidden"
                Grid.Row="1">
                <ListView
                    x:Name="QueueListView">
                    <ListView.Resources>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="IsHitTestVisible" Value="False"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn 
                                x:Name="QueueOverlayColumn" 
                                Header="Queue" 
                                Width="200">   
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Artist}" FontStyle="Italic" FontSize="12"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>    
                </ListView>
        </Border>

        <!-- Control bar -->
        <Grid Grid.Row="2" Background="#222" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> 
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/> 
            </Grid.ColumnDefinitions>
            <!-- Left: Song title + artist -->
            <StackPanel 
                Grid.Column="0"
                Margin="10" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                >
                <TextBlock x:Name="TxtSongTitle" Text="Song Title" FontWeight="Bold" FontSize="14" Foreground="White"/>
                <TextBlock x:Name="TxtArtistName" Text="Artist Name" FontSize="12" Foreground="White"/>
            </StackPanel>

            <!-- Middle: controls (nested grid for top + bottom rows) -->
            <Grid 
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Stretch"
            >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- buttons row -->
                    <RowDefinition Height="Auto"/> <!-- seekbar row -->
                </Grid.RowDefinitions>

                <!-- Buttons row -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button 
                        x:Name="BtnShuffle" 
                        Content="S" 
                        Margin="3,5"
                        />
                    <Button
                        x:Name="BtnPreviousSong" 
                        Content="P" 
                        Margin="3,5"
                        Click="BtnPreviousSong_OnClick"
                        />
                    <Button 
                        x:Name="BtnPauseResume" 
                        Content="P" 
                        Margin="3,5"
                        Click="OnPauseResume"
                        />
                    <Button 
                        x:Name="BtnNextSong" 
                        Content="N" 
                        Margin="3,5"
                        Click="BtnNextSong_OnClick"
                        />
                    <Button 
                        x:Name="BtnLoop" 
                        Content="L" 
                        Margin="3,5"
                        Click="BtnLoop_OnClick"
                        Background="White"
                        />
                </StackPanel>

                <!-- Seekbar row with times -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                        x:Name="TxtCurrentTime" 
                        Text="0:00" 
                        Grid.Column="0" 
                        VerticalAlignment="Center" 
                        Margin="5"
                        Foreground="White"
                        />
                    <Slider
                        x:Name="SeekBar" 
                        Grid.Column="1"
                        Minimum="0" 
                        Maximum="100"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center" 
                        Margin="5"
                        IsMoveToPointEnabled="False"
                        PreviewMouseMove="SeekBar_PreviewMouseMove"
                        PreviewMouseLeftButtonUp="SeekBar_PreviewMouseLeftButtonUp"
                        ValueChanged="SeekBar_ValueChanged"
                        >
                        </Slider>
                    <TextBlock 
                        x:Name="TxtTotalTime" 
                        Text="3:45" 
                        Grid.Column="2" 
                        VerticalAlignment="Center" 
                        Margin="5"
                        Foreground="White"
                        />
                </Grid>
            </Grid>
            
            <!-- Right: Queue + volume -->
            <Grid 
                Grid.Column="2" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Stretch"
                Margin="10"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="TxtVolumePercentage"
                    Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="100%"
                    Foreground="White"
                    />
                <TextBlock
                    x:Name="Debug"
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="N"
                    Foreground="White"
                />
                <Button 
                    Content="Q" 
                    Margin="0,5" 
                    Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Click="Queue_OnClick"
                    />
                <Slider 
                    x:Name="VolumeBar"
                    Minimum="0" 
                    Maximum="150"
                    Value="100"
                    HorizontalAlignment="Stretch"
                    MinWidth="10"
                    MaxWidth="200"
                    VerticalAlignment="Center" 
                    Margin="0"
                    Grid.Column="1"
                    Grid.Row="1"
                    IsMoveToPointEnabled="True"
                    ValueChanged="VolumeBar_ValueChanged"
                    />
            </Grid>
        </Grid>

    </Grid>
</Window>


