<Window x:Class="Riffle.Player.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Riffle Music Player" Height="600" Width="800"
        MinWidth="600" MinHeight="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/> 
            <RowDefinition Height="*"/>    
            <RowDefinition Height="auto"/> 
        </Grid.RowDefinitions>

        <!-- Title layer -->
        <StackPanel 
            Grid.Row="0"
            Background="#222" 
            Orientation="Horizontal"
            >
            <TextBlock
                Text="RifflePlayer"
                Foreground="White"
                FontSize="16"
                Margin="25,5,30,5"
                VerticalAlignment="Center"
                />
            <Button
                x:Name="BtnImportSong"
                Click="BtnImportSong_OnClick"
                Content="Import new song"
                Margin="10"
                Padding="2"
                VerticalAlignment="Center"
                ></Button>
        </StackPanel>
        
        <!-- main content -->
        <Grid 
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> 
                <ColumnDefinition Width="3*"/>    
                <ColumnDefinition Width="auto"/> 
            </Grid.ColumnDefinitions>
            <ListView 
                x:Name="PlaylistList"
                Grid.Column="0"
            >
                <!-- PLaylists -->
            </ListView>
            <ListView 
                x:Name="PlaylistContent"
                Grid.Column="1"
                >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                        <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Artist}" Width="150"/>
                        <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Duration}" Width="80"/>
                    </GridView>
                </ListView.View>
                <!-- item template for songs goes here -->
            </ListView>
        </Grid>

        <!-- Control bar -->
        <Grid Grid.Row="2" Background="#222" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> 
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/> 
            </Grid.ColumnDefinitions>
            <!-- Left: Song title + artist -->
            <StackPanel 
                Grid.Column="0"
                Margin="10" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                >
                <TextBlock x:Name="TxtSongTitle" Text="Song Title" FontWeight="Bold" FontSize="14" Foreground="White"/>
                <TextBlock x:Name="TxtArtistName" Text="Artist Name" FontSize="12" Foreground="White"/>
            </StackPanel>

            <!-- Middle: controls (nested grid for top + bottom rows) -->
            <Grid 
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Stretch"
            >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- buttons row -->
                    <RowDefinition Height="Auto"/> <!-- seekbar row -->
                </Grid.RowDefinitions>

                <!-- Buttons row -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button 
                        x:Name="BtnShuffle" 
                        Content="S" 
                        Margin="3,5"
                        />
                    <Button
                        x:Name="BtnPreviousSong" 
                        Content="P" 
                        Margin="3,5"
                        />
                    <Button 
                        x:Name="BtnPauseResume" 
                        Content="P" 
                        Margin="3,5"
                        Click="OnPauseResume"
                        />
                    <Button 
                        x:Name="BtnNextSong" 
                        Content="N" 
                        Margin="3,5"
                        />
                    <Button 
                        x:Name="BtnLoop" 
                        Content="L" 
                        Margin="3,5"
                        />
                </StackPanel>

                <!-- Seekbar row with times -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                        x:Name="TxtCurrentTime" 
                        Text="0:00" 
                        Grid.Column="0" 
                        VerticalAlignment="Center" 
                        Margin="5"
                        Foreground="White"
                        />
                    <Slider
                        x:Name="SeekBar" 
                        Grid.Column="1"
                        Minimum="0" 
                        Maximum="100"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center" 
                        Margin="5"
                        IsMoveToPointEnabled="True"
                        MouseLeftButtonUp="OnMouseLeftButtonUp"
                        MouseLeftButtonDown="OnMouseLeftButtonDown"
                        ValueChanged="SeekBar_ValueChanged"
                        >
                        </Slider>
                    <TextBlock 
                        x:Name="TxtTotalTime" 
                        Text="3:45" 
                        Grid.Column="2" 
                        VerticalAlignment="Center" 
                        Margin="5"
                        Foreground="White"
                        />
                </Grid>
            </Grid>
            
            <!-- Right: Queue + volume -->
            <Grid 
                Grid.Column="2" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Stretch"
                Margin="10"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="TxtVolumePercentage"
                    Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="100%"
                    Foreground="White"
                    />
                <TextBlock
                    x:Name="Debug"
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="N"
                    Foreground="White"
                />
                <Button 
                    Content="Q" 
                    Margin="0,5" 
                    Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    />
                <Slider 
                    x:Name="VolumeBar"
                    Minimum="0" 
                    Maximum="150"
                    Value="100"
                    HorizontalAlignment="Stretch"
                    MinWidth="10"
                    MaxWidth="200"
                    VerticalAlignment="Center" 
                    Margin="0"
                    Grid.Column="1"
                    Grid.Row="1"
                    IsMoveToPointEnabled="True"
                    MouseLeftButtonDown="OnMouseLeftButtonDown"
                    MouseLeftButtonUp="OnMouseLeftButtonUp"
                    ValueChanged="VolumeBar_ValueChanged"
                    />
            </Grid>
        </Grid>
    </Grid>
</Window>
