<Window x:Class="Riffle.Player.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converter="clr-namespace:Riffle.Player.Windows.Converters"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Riffle.Core.Models;assembly=Core"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Riffle Music Player" Height="600" Width="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        MinWidth="600" MinHeight="500">

    <Window.Resources>
        <converter:ReferenceEqualityConverter x:Key="ReferenceEqualityConverter"/>
        <converter:IndexToNumberConverter x:Key="IndexToNumberConverter"/>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            CornerRadius="20"
            GlassFrameThickness="5"
            ResizeBorderThickness="5"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Grid
        ClipToBounds="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/> 
            <RowDefinition Height="*"/>    
            <RowDefinition Height="auto"/> 
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" Background="#222" MouseLeftButtonDown="Border_MouseLeftButtonDown" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal">
                <TextBlock
                    Text="RifflePlayer"
                    Foreground="White"
                    FontSize="20"
                    Margin="25,5,30,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />
                <Button
                    x:Name="BtnImportSong"
                    Click="BtnImportSong_OnClick"
                    Content="Import new song"
                    Margin="0,5"
                    Padding="2"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Window Controls -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Column="1">
                <!-- Minimize -->
                <Button Width="25"
                        Height="25"
                        Content="—"
                        Margin="2"
                        Click="Minimize_Click" />

                <!-- Maximize / Restore -->
                <Button Width="25"
                        Height="25"
                        Content="⬜"
                        Margin="2"
                        Click="Maximize_Click" />

                <!-- Close -->
                <Button Width="25"
                        Height="25"
                        Content="✕"
                        Margin="2,2,4,2"
                        Click="Close_Click"
                        Foreground="Red" />
            </StackPanel>
        </Grid>

        <!-- Main layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!-- Playlists -->
            <ListView x:Name="PlaylistList"
                      Grid.Column="0"
                      ItemsSource="{Binding SidebarViewModel.Playlists}"
                      SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}"
                      SelectionChanged="PlaylistList_OnSelected"
                      MouseDoubleClick="PlaylistList_OnMouseDoubleClick"
                      SizeChanged="PlaylistList_OnSizeChanged">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource ReferenceEqualityConverter}">
                                        <Binding Path="." /> <!-- The playlist in this row -->
                                        <Binding Path="ViewModel.CurrentPlaylistPlaying"
                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter Property="Foreground" Value="Green"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView x:Name="PlaylistView">
                        <GridViewColumn Width="200" DisplayMemberBinding="{Binding Name}">
                            <GridViewColumn.Header>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Playlists" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <Button Content="+" Width="20" Height="20" Margin="0,0,2,0"
                                            Click="AddPlaylist_Click"/>
                                    <Button Content="−" Width="20" Height="20"
                                            Click="RemovePlaylist_Click"/>
                                </StackPanel>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Songs -->
            
            <ScrollViewer 
                VerticalScrollBarVisibility="Auto"
                Grid.Column="1">
                <StackPanel>
                    <!-- Playlist Header -->
                    <Border Background="#222" Padding="10,5" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedPlaylist.Name}" 
                                       FontSize="56" FontWeight="Bold" Foreground="White"/>
                            <TextBlock
                                x:Name="PlaylistInfo"
                                Text="0 songs, 0 hr 0 min"
                                FontSize="14" Foreground="LightGray"/>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!--<StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">-->
                                <StackPanel
                                    Grid.Column="0"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                                    <!--<Button 
                                        x:Name="PlaylistPlayBtn"
                                        Content="⏸" 
                                        Padding="-2,-2,-2,-0.5"
                                        FontSize="18"
                                        Margin="0,0,10,0"
                                        Command="{Binding PlayPlaylistCommand}" 
                                        Width="auto" 
                                        Click="PlaylistPlayBtn_OnBtnClick"
                                    /> -->
                                    <Button 
                                        x:Name="PlaylistPlayBtn"
                                        Content="▶" 
                                        Padding="5,0"
                                        FontSize="12"
                                        Margin="0,0,10,0"
                                        Command="{Binding PlayPlaylistCommand}" 
                                        Width="auto" 
                                        Click="PlaylistPlayBtn_OnBtnClick"
                                    />
                                    <ToggleButton Content="Shuffle" 
                                                  IsChecked="{Binding SelectedPlaylist.IsShuffling}"/>
                                </StackPanel>
                                <StackPanel
                                    Grid.Column="2"
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBox x:Name="SearchBox"
                                                 Width="200"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Padding="2"
                                                 FontSize="12">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                    <Setter Property="Text" Value="Search..."/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                                            <Setter Property="Foreground" Value="Black"/>
                                                            <Setter Property="Text" Value=""/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                        <ComboBox ItemsSource="{Binding SortOptions}" 
                                                  SelectedItem="{Binding SelectedSortOption}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Playlist Songs -->
                    <ListView x:Name="PlaylistContent"
                          ItemsSource="{Binding SongsViewModel.Songs}"
                          MouseDoubleClick="PlaylistContent_OnMouseDoubleClick"
                          SizeChanged="PlaylistContent_OnSizeChanged"
                          AlternationCount="1000000"
                          Height = "auto"
                          BorderThickness="0"
                          Padding="10,0"
                          >

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ReferenceEqualityConverter}">
                                                <Binding Path="." /> <!-- Song in this row -->
                                                <Binding Path="ViewModel.CurrentSong" RelativeSource="{RelativeSource AncestorType=Window}" />
                                                <Binding Path="ViewModel.SelectedPlaylist" RelativeSource="{RelativeSource AncestorType=Window}" />
                                                <Binding Path="ViewModel.CurrentPlaylistPlaying" RelativeSource="{RelativeSource AncestorType=Window}" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.Resources>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.Resources>

                        <ListView.View>
                            <GridView x:Name="GridView">
                                <GridViewColumn Header="#" Width="20">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock 
                                                Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListViewItem}, 
                                                Path=(ItemsControl.AlternationIndex), Converter={StaticResource IndexToNumberConverter}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200" />
                                <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Artist}" Width="100" />
                                <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding DurationDisplay}" Width="100" />
                                <GridViewColumn Header="FilePath" DisplayMemberBinding="{Binding FilePath}" Width="200" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </ScrollViewer>
            
            <StackPanel
                x:Name="QueueWindowGridSpace"
                Width="200"
                Grid.Column="2"
                Visibility="Collapsed">
            </StackPanel>
        </Grid>

        <Border Background="White"
                BorderBrush="Gray" BorderThickness="1"
                x:Name="QueueOverlay" 
                HorizontalAlignment="Right"
                Visibility="Collapsed"
                Grid.Row="1">
            <TabControl Width="200">
                <TabControl.Template>
                    <ControlTemplate TargetType="TabControl">
                        <StackPanel>
                            <!-- Header panel with custom content -->
                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />    <!-- Tabs -->
                                    <ColumnDefinition Width="Auto" /> <!-- Close button -->
                                </Grid.ColumnDefinitions>

                                <!-- Tab headers -->
                                <TabPanel x:Name="HeaderPanel"
                                          Grid.Column="0"
                                          IsItemsHost="True"
                                          Background="{TemplateBinding Background}" />

                                <!-- Close button -->
                                <Button Grid.Column="1"
                                        Content="✕"
                                        Width="20"
                                        Height="20"
                                        Click="Queue_OnClick"
                                        Background="Transparent"
                                        BorderThickness="1,1,1,0"
                                        FontSize="12"
                                        Foreground="Gray"
                                        Margin="5,0,5,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center" />
                            </Grid>

                            <!-- Content -->
                            <ContentPresenter x:Name="PART_SelectedContentHost"
                                              ContentSource="SelectedContent"
                                              Margin="0" />
                        </StackPanel>
                    </ControlTemplate>
                </TabControl.Template>

                <TabItem Header="Queue">
                    <ListView
                        x:Name="QueueListView"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        >
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="IsHitTestVisible" Value="False" />
                                <Setter Property="Height" Value="0"></Setter>
                            </Style>
                        </ListView.Resources>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    x:Name="QueueOverlayColumn">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical"
                                                        d:DataContext="{d:DesignInstance models:Song, IsDesignTimeCreatable=False}">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                                                <TextBlock Text="{Binding Artist}" FontStyle="Italic" FontSize="12" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
                <TabItem Header="Recently Played">
                    <ListView 
                        x:Name="RecentlyPlayedListView"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        >
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="IsHitTestVisible" Value="False" />
                                <Setter Property="Height" Value="0"></Setter>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical"
                                                        d:DataContext="{d:DesignInstance models:SongPlayed, IsDesignTimeCreatable=False}">
                                                <TextBlock Text="{Binding Song.Title}" FontWeight="Bold" />
                                                <TextBlock Text="{Binding Song.Artist}" FontStyle="Italic" FontSize="12" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
            </TabControl>
        </Border>

        <!-- Control bar -->
        <Grid Grid.Row="2" Background="#222">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> 
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/> 
            </Grid.ColumnDefinitions>
            <!-- Left: Song title + artist -->
            <StackPanel 
                Grid.Column="0"
                Margin="10" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                >
                <TextBlock x:Name="TxtSongTitle" Text="Song Title" FontWeight="Bold" FontSize="14" Foreground="White"/>
                <TextBlock x:Name="TxtArtistName" Text="Artist Name" FontSize="12" Foreground="White"/>
            </StackPanel>

            <!-- Middle: controls (nested grid for top + bottom rows) -->
            <Grid
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Stretch"
            >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- buttons row -->
                    <RowDefinition Height="Auto"/> <!-- seekbar row -->
                </Grid.RowDefinitions>

                <!-- Buttons row -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button
                        x:Name="BtnShuffle"
                        Content="🔀" 
                        FontSize="16"
                        Padding="-2,-2, -2 , -0.5"
                        Margin="3,5" />
                    <Button
                        x:Name="BtnPreviousSong"
                        Content="⏮" 
                        FontSize="16"
                        Padding="-2,-2, -2 , -0.5"
                        Margin="3,5"
                        Click="BtnPreviousSong_OnClick" />
                    <Button
                        x:Name="BtnPauseResume"
                        Content="▶" 
                        FontSize="16"
                        Padding=".5,-2, .5, -0.5"
                        Margin="3,5"
                        Click="OnPauseResume" />
                    <Button
                        x:Name="BtnNextSong"
                        Content="⏭" 
                        FontSize="16"
                        Padding="-2,-2, -2 , -0.5"
                        Margin="3,5"
                        Click="BtnNextSong_OnClick" />
                    <Button
                        x:Name="BtnLoop"
                        Content="🔁" 
                        FontSize="16"
                        Padding="-2,-2, -2 , -0.5"
                        Margin="3,5"
                        Click="BtnLoop_OnClick"
                        Background="White" />
                </StackPanel>

                <!-- Seekbar row with times -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        x:Name="TxtCurrentTime"
                        Text="0:00"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="5"
                        Foreground="White" />
                    <Slider
                        x:Name="SeekBar"
                        Grid.Column="1"
                        Minimum="0"
                        Maximum="100"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="5"
                        IsMoveToPointEnabled="False"
                        PreviewMouseMove="SeekBar_PreviewMouseMove"
                        PreviewMouseLeftButtonUp="SeekBar_PreviewMouseLeftButtonUp"
                        ValueChanged="SeekBar_ValueChanged">
                    </Slider>
                    <TextBlock
                        x:Name="TxtTotalTime"
                        Text="3:45"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Margin="5"
                        Foreground="White" />
                </Grid>
            </Grid>

            <!-- Right: Queue + volume -->
            <Grid
                Grid.Column="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="TxtVolumePercentage"
                    Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="100%"
                    Foreground="White"
                    />
                <Button 
                    Content="Q" 
                    Margin="0,5" 
                    Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Click="Queue_OnClick" />
                <Slider
                    x:Name="VolumeBar"
                    Minimum="0"
                    Maximum="150"
                    Value="100"
                    HorizontalAlignment="Stretch"
                    MinWidth="10"
                    MaxWidth="200"
                    VerticalAlignment="Center"
                    Margin="0"
                    Grid.Column="1"
                    Grid.Row="1"
                    IsMoveToPointEnabled="True"
                    ValueChanged="VolumeBar_ValueChanged" />
            </Grid>
        </Grid>

    </Grid>
</Window>


