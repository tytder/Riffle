            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="50"/>
            <Setter Property="BorderBrush" Value="DimGray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>-->
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            CornerRadius="20"
            GlassFrameThickness="5"
            ResizeBorderThickness="5"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Grid
        ClipToBounds="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" Background="#222" MouseLeftButtonDown="Border_MouseLeftButtonDown" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal">
                <TextBlock
                    Text="RifflePlayer"
                    Foreground="White"
                    FontSize="20"
                    Margin="25,5,30,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />
                <Button
                    x:Name="BtnImportSong"
                    Click="BtnImportSong_OnClick"
                    Content="Import new song"
                    Margin="0,5"
                    Padding="2"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Window Controls -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Column="1">
                <!-- Minimize -->
                <Button Width="25"
                        Height="25"
                        Content="—"
                        Margin="2"
                        Click="Minimize_Click" />

                <!-- Maximize / Restore -->
                <Button Width="25"
                        Height="25"
                        Content="⬜"
                        Margin="2"
                        Click="Maximize_Click" />

                <!-- Close -->
                <Button Width="25"
                        Height="25"
                        Content="✕"
                        Margin="2,2,4,2"
                        Click="Close_Click"
                        Foreground="Red" />
            </StackPanel>
        </Grid>

        <!-- Main layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!-- Playlists -->
            <ListView x:Name="PlaylistList"
                      Grid.Column="0"
                      ItemsSource="{Binding SidebarViewModel.Playlists}"
                      SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}"
                      MouseDoubleClick="PlaylistList_OnMouseDoubleClick"
                      SizeChanged="PlaylistList_OnSizeChanged">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource ReferenceEqualityConverter}">
                                        <Binding Path="." /> <!-- The playlist in this row -->
                                        <Binding Path="ViewModel.CurrentPlaylistPlaying"
                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter Property="Foreground" Value="Green" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView x:Name="PlaylistView">
                        <GridViewColumn Width="200" DisplayMemberBinding="{Binding Name}">
                            <GridViewColumn.Header>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Playlists" VerticalAlignment="Center" Margin="0,0,5,0" />
                                    <Button Content="+" Width="20" Height="20" Margin="0,0,2,0"
                                            Click="AddPlaylist_Click" />
                                    <Button Content="−" Width="20" Height="20"
                                            VerticalAlignment="Center"
                                            Click="RemovePlaylist_Click" />
                                </StackPanel>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Songs -->
            <ListView x:Name="PlaylistContent"
                      Grid.Column="1"
                      ItemsSource="{Binding SongsViewModel.Songs}"
                      MouseDoubleClick="PlaylistContent_OnMouseDoubleClick"
                      SizeChanged="PlaylistContent_OnSizeChanged">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource ReferenceEqualityConverter}">
                                        <Binding Path="." /> <!-- Song in this row -->
                                        <Binding Path="ViewModel.CurrentSongPlaying"
                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                        <Binding Path="ViewModel.SelectedPlaylist"
                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                        <Binding Path="ViewModel.CurrentPlaylistPlaying"
                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter Property="Foreground" Value="Green" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView x:Name="GridView">
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200" />
                        <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Artist}" Width="100" />
                        <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding DurationDisplay}" Width="100" />
                        <GridViewColumn Header="FilePath" DisplayMemberBinding="{Binding FilePath}" Width="200" />
                    </GridView>
                </ListView.View>
            </ListView>
            <TabControl
                Background="White"
                BorderBrush="Gray" BorderThickness="1"
                x:Name="QueueOverlay"
                HorizontalAlignment="Right"
                Width="auto"
                Visibility="Collapsed"
                Grid.Column="2">

                <TabControl.Template>
                    <ControlTemplate TargetType="TabControl">
                        <DockPanel>
                            <!-- Header panel with custom content -->
                            <DockPanel DockPanel.Dock="Top" VerticalAlignment="Center">
                                <TabPanel x:Name="HeaderPanel"
                                          DockPanel.Dock="Left"
                                          IsItemsHost="True"
                                          Background="{TemplateBinding Background}" />

                                <Button Content="✕"
                                        Width="20"
                                        Height="20"
                                        DockPanel.Dock="Right"
                                        Click="Queue_OnClick"
                                        Background="Transparent"
                                        BorderThickness="1,1,1,0"
                                        FontSize="12"
                                        Foreground="Gray"
                                        Margin="5,0,5,0" />
                            </DockPanel>

                            <!-- Content -->
                            <ContentPresenter x:Name="PART_SelectedContentHost"
                                              ContentSource="SelectedContent"
                                              Margin="0" />
                        </DockPanel>
                    </ControlTemplate>
                </TabControl.Template>

                <TabItem Header="Queue">
                    <ListView
                        x:Name="QueueListView"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        d:DataContext="{d:DesignInstance audio:Song, IsDesignTimeCreatable=True}"
                        >
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="IsHitTestVisible" Value="False" />
                                <Setter Property="Height" Value="0"></Setter>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    x:Name="QueueOverlayColumn"
                                    Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                                                <TextBlock Text="{Binding Artist}" FontStyle="Italic" FontSize="12" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
                <TabItem Header="Recently Played">
                    <ListView x:Name="RecentlyPlayedListView">
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="IsHitTestVisible" Value="False" />
                                <Setter Property="Height" Value="0"></Setter>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                                                <TextBlock Text="{Binding Artist}" FontStyle="Italic" FontSize="12" />
                                                <TextBlock Text="{Binding PlayedAt, StringFormat='{}{0:G}'}"
                                                           FontSize="10" Foreground="Gray" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
            </TabControl>

