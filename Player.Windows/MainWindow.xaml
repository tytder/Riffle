        <!-- Control bar -->
        <Grid Grid.Row="2" Background="#222">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Left: Song title + artist -->
            <StackPanel
                Grid.Column="0"
                Margin="10"
                VerticalAlignment="Center"
                HorizontalAlignment="Left">
                <TextBlock x:Name="TxtSongTitle" Text="Song Title" FontWeight="Bold" FontSize="14" Foreground="White" />
                <TextBlock x:Name="TxtArtistName" Text="Artist Name" FontSize="12" Foreground="White" />
            </StackPanel>

            <!-- Middle: controls (nested grid for top + bottom rows) -->
            <Grid
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- buttons row -->
                    <RowDefinition Height="Auto" /> <!-- seekbar row -->
                </Grid.RowDefinitions>

                <!-- Buttons row -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button
                        x:Name="BtnShuffle"
                        Content="S"
                        Margin="3,5" />
                    <Button
                        x:Name="BtnPreviousSong"
                        Content="P"
                        Margin="3,5"
                        Click="BtnPreviousSong_OnClick" />
                    <Button
                        x:Name="BtnPauseResume"
                        Content="P"
                        Margin="3,5"
                        Click="OnPauseResume" />
                    <Button
                        x:Name="BtnNextSong"
                        Content="N"
                        Margin="3,5"
                        Click="BtnNextSong_OnClick" />
                    <Button
                        x:Name="BtnLoop"
                        Content="L"
                        Margin="3,5"
                        Click="BtnLoop_OnClick"
                        Background="White" />
                </StackPanel>

                <!-- Seekbar row with times -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        x:Name="TxtCurrentTime"
                        Text="0:00"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="5"
                        Foreground="White" />
                    <Slider
                        x:Name="SeekBar"
                        Grid.Column="1"
                        Minimum="0"
                        Maximum="100"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="5"
                        IsMoveToPointEnabled="False"
                        PreviewMouseMove="SeekBar_PreviewMouseMove"
                        PreviewMouseLeftButtonUp="SeekBar_PreviewMouseLeftButtonUp"
                        ValueChanged="SeekBar_ValueChanged">
                    </Slider>
                    <TextBlock
                        x:Name="TxtTotalTime"
                        Text="3:45"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Margin="5"
                        Foreground="White" />
                </Grid>
            </Grid>

            <!-- Right: Queue + volume -->
            <Grid
                Grid.Column="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="TxtVolumePercentage"
                    Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="100%"
                    Foreground="White" />
                <TextBlock
                    x:Name="Debug"
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="N"
                    Foreground="White" />
                <Button
                    Content="Q"
                    Margin="0,5"
                    Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Click="Queue_OnClick" />
                <Slider
                    x:Name="VolumeBar"
                    Minimum="0"
                    Maximum="150"
                    Value="100"
                    HorizontalAlignment="Stretch"
                    MinWidth="10"
                    MaxWidth="200"
                    VerticalAlignment="Center"
                    Margin="0"
                    Grid.Column="1"
                    Grid.Row="1"
                    IsMoveToPointEnabled="True"
                    ValueChanged="VolumeBar_ValueChanged" />
            </Grid>
        </Grid>

    </Grid>
</Window>


