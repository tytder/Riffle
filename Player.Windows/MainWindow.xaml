<Window x:Class="Riffle.Player.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:windows="clr-namespace:Riffle.Player.Windows"
        Title="Riffle Music Player" Height="600" Width="800"
        MinWidth="600" MinHeight="500">
    <Window.Resources>
        <windows:ReferenceEqualityConverter x:Key="ReferenceEqualityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/> 
            <RowDefinition Height="*"/>    
            <RowDefinition Height="auto"/> 
        </Grid.RowDefinitions>

        <!-- Title layer -->
        <StackPanel 
            Grid.Row="0"
            Background="#222" 
            Orientation="Horizontal"
            >
            <TextBlock
                Text="RifflePlayer"
                Foreground="White"
                FontSize="16"
                Margin="25,5,30,5"
                VerticalAlignment="Center"
                />
            <Button
                x:Name="BtnImportSong"
                Click="BtnImportSong_OnClick"
                Content="Import new song"
                Margin="10"
                Padding="2"
                VerticalAlignment="Center"
                ></Button>
        </StackPanel>
        
        <!-- main content -->
        <Grid 
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> 
                <ColumnDefinition Width="3*"/>    
                <ColumnDefinition Width="auto"/> 
            </Grid.ColumnDefinitions>
            <ListView 
                x:Name="PlaylistList"
                SizeChanged="PlaylistList_OnSizeChanged"
                Grid.Column="0"
                MouseDoubleClick="PlaylistList_OnMouseDoubleClick">
            >
            <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource ReferenceEqualityConverter}">
                                        <!-- The playlist represented by this row -->
                                        <Binding Path="." />
                                        <!-- The PlayingPlaylist -->
                                        <Binding Path="CurrentPlaylistPlaying"
                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                    </MultiBinding>
                                </DataTrigger.Binding>

                                <Setter Property="Foreground" Value="Green"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView x:Name="PlaylistView">
                        <GridViewColumn Width="200">
                            <GridViewColumn.Header>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Playlists" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <Button 
                                        Content="+" Width="20" Height="20" 
                                        Margin="0,0,2,0"
                                        Click="AddPlaylist_Click"
                                        HorizontalAlignment="Right"/>
                                    <Button Content="−" Width="20" Height="20"
                                        HorizontalAlignment="Right"
                                        Click="RemovePlaylist_Click"/>
                                </StackPanel>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
                <!-- Playlists -->
            </ListView>
            <ListView 
                x:Name="PlaylistContent"
                Grid.Column="1"
                SizeChanged="PlaylistContent_OnSizeChanged"
                SelectionMode="Single"
                MouseDoubleClick="PlaylistContent_OnMouseDoubleClick">
                >
                <!--<ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                <Setter Property="Foreground" Value="Green"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>-->
                
                
                <!--<ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <MultiBinding Converter="{StaticResource ReferenceEqualityConverter}">
                                                    <Binding /> ~1~ the current item @1@
                                                    <Binding Path="DataContext.(windows:MainWindow.CurrentSong)" 
                                                             RelativeSource="{RelativeSource AncestorType=Window}" />
                                                </MultiBinding>
                                            </DataTrigger.Binding>
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>-->
                
                
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <!--<DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource ReferenceEqualityConverter}">
                                        ~1~ current item @1@
                                        <Binding/>
                                        ~1~ currently playing song @1@
                                        <Binding Path="(MainWindow)DataContext.CurrentSong"
                                                 RelativeSource="{RelativeSource AncestorType=windows:MainWindow}"/>
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter Property="Foreground" Value="Green"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>-->
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource ReferenceEqualityConverter}">
                                        <!-- The song represented by this row -->
                                        <Binding Path="." />
                                        <!-- The CurrentSong from your Window -->
                                        <Binding Path="CurrentSongPlaying"
                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                        <!-- The OpenPlaylist -->
                                        <Binding Path="CurrentPlaylistOpen"
                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                        <!-- The PlayingPlaylist -->
                                        <Binding Path="CurrentPlaylistPlaying"
                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                    </MultiBinding>
                                </DataTrigger.Binding>

                                <Setter Property="Foreground" Value="Green"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView x:Name="GridView">
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                        <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Artist}" Width="100"/>
                        <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding DurationDisplay}" Width="100"/>
                        <GridViewColumn Header="FilePath" DisplayMemberBinding="{Binding FilePath}" Width="200"/>
                    </GridView>
                </ListView.View>
                <!-- item template for songs goes here -->
            </ListView>
            
        </Grid>
        
        <Border Background="White"
                BorderBrush="Gray" BorderThickness="1"
                x:Name="QueueOverlay" 
                HorizontalAlignment="Right"
                Width="auto"
                Visibility="Hidden"
                Grid.Row="1">
                <ListView
                    x:Name="QueueListView">
                    <ListView.Resources>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="IsHitTestVisible" Value="False"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn 
                                x:Name="QueueOverlayColumn" 
                                Header="Queue" 
                                Width="200">   
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Artist}" FontStyle="Italic" FontSize="12"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>    
                </ListView>
        </Border>

        <!-- Control bar -->
        <Grid Grid.Row="2" Background="#222" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> 
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/> 
            </Grid.ColumnDefinitions>
            <!-- Left: Song title + artist -->
            <StackPanel 
                Grid.Column="0"
                Margin="10" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                >
                <TextBlock x:Name="TxtSongTitle" Text="Song Title" FontWeight="Bold" FontSize="14" Foreground="White"/>
                <TextBlock x:Name="TxtArtistName" Text="Artist Name" FontSize="12" Foreground="White"/>
            </StackPanel>

            <!-- Middle: controls (nested grid for top + bottom rows) -->
            <Grid 
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Stretch"
            >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- buttons row -->
                    <RowDefinition Height="Auto"/> <!-- seekbar row -->
                </Grid.RowDefinitions>

                <!-- Buttons row -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button 
                        x:Name="BtnShuffle" 
                        Content="S" 
                        Margin="3,5"
                        />
                    <Button
                        x:Name="BtnPreviousSong" 
                        Content="P" 
                        Margin="3,5"
                        Click="BtnPreviousSong_OnClick"
                        />
                    <Button 
                        x:Name="BtnPauseResume" 
                        Content="P" 
                        Margin="3,5"
                        Click="OnPauseResume"
                        />
                    <Button 
                        x:Name="BtnNextSong" 
                        Content="N" 
                        Margin="3,5"
                        Click="BtnNextSong_OnClick"
                        />
                    <Button 
                        x:Name="BtnLoop" 
                        Content="L" 
                        Margin="3,5"
                        Click="BtnLoop_OnClick"
                        Background="White"
                        />
                </StackPanel>

                <!-- Seekbar row with times -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                        x:Name="TxtCurrentTime" 
                        Text="0:00" 
                        Grid.Column="0" 
                        VerticalAlignment="Center" 
                        Margin="5"
                        Foreground="White"
                        />
                    <Slider
                        x:Name="SeekBar" 
                        Grid.Column="1"
                        Minimum="0" 
                        Maximum="100"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center" 
                        Margin="5"
                        IsMoveToPointEnabled="False"
                        MouseLeftButtonUp="OnMouseLeftButtonUp"
                        MouseLeftButtonDown="OnMouseLeftButtonDown"
                        PreviewMouseMove="SeekBar_PreviewMouseMove"
                        PreviewMouseLeftButtonUp="SeekBar_PreviewMouseLeftButtonUp"
                        ValueChanged="SeekBar_ValueChanged"
                        >
                        </Slider>
                    <TextBlock 
                        x:Name="TxtTotalTime" 
                        Text="3:45" 
                        Grid.Column="2" 
                        VerticalAlignment="Center" 
                        Margin="5"
                        Foreground="White"
                        />
                </Grid>
            </Grid>
            
            <!-- Right: Queue + volume -->
            <Grid 
                Grid.Column="2" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Stretch"
                Margin="10"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="TxtVolumePercentage"
                    Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="100%"
                    Foreground="White"
                    />
                <TextBlock
                    x:Name="Debug"
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="N"
                    Foreground="White"
                />
                <Button 
                    Content="Q" 
                    Margin="0,5" 
                    Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Click="Queue_OnClick"
                    />
                <Slider 
                    x:Name="VolumeBar"
                    Minimum="0" 
                    Maximum="150"
                    Value="100"
                    HorizontalAlignment="Stretch"
                    MinWidth="10"
                    MaxWidth="200"
                    VerticalAlignment="Center" 
                    Margin="0"
                    Grid.Column="1"
                    Grid.Row="1"
                    IsMoveToPointEnabled="True"
                    MouseLeftButtonDown="OnMouseLeftButtonDown"
                    MouseLeftButtonUp="OnMouseLeftButtonUp"
                    ValueChanged="VolumeBar_ValueChanged"
                    />
            </Grid>
        </Grid>
    </Grid>
</Window>
