        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:audio="clr-namespace:Riffle.Core.Audio;assembly=Core"
        WindowStyle="None"
        Title="Riffle Music Player" Height="600" Width="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        MinWidth="600" MinHeight="500">

    <Window.Resources>
        <windows:ReferenceEqualityConverter x:Key="ReferenceEqualityConverter" />
